<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent" 
    android:background="@color/purple">
    
    <ScrollView   android:layout_width="match_parent"
            android:layout_height="match_parent">
            
        <RelativeLayout  android:layout_width="match_parent"
            android:layout_height="match_parent">
    
    <ToggleButton
            android:id="@+id/tglSound"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
           android:layout_alignParentRight="true"
           android:layout_marginRight="30dp"
           android:layout_marginTop="30dp"
            android:text="" 
            android:textOn=""
            android:textOff=""
            />

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_below="@+id/tglSound"
        android:layout_centerHorizontal="true"
        android:layout_centerVertical="true" 
        android:orientation="vertical"
        android:gravity="center"
        android:layout_marginLeft="20dp"
        android:layout_marginRight="20dp"
        android:padding="10dp"
        >

        

        <Button
            android:id="@+id/btnStart"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Start" 
            android:layout_gravity="center"
             android:textAppearance="?android:attr/textAppearanceLarge"
             android:textColor="@android:color/white"
            android:background="@drawable/button1"/>
        
         <Button
            android:id="@+id/btnSavedImages"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Saved Images"
            android:layout_marginTop="5dp"
             android:layout_gravity="center"
             android:textAppearance="?android:attr/textAppearanceLarge"
             android:textColor="@android:color/white"
            android:background="@drawable/button1_press" />
         
          <Button
            android:id="@+id/btnMoreImages"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="More Images" 
            android:layout_marginTop="5dp"
             android:layout_gravity="center"
             android:textAppearance="?android:attr/textAppearanceLarge"
             android:textColor="@android:color/white"
            android:background="@drawable/button1_press"/>
          
           <Button
            android:id="@+id/btnMoreApps"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="More Apps"
            android:layout_marginTop="5dp"
             android:layout_gravity="center"
             android:textAppearance="?android:attr/textAppearanceLarge"
             android:textColor="@android:color/white"
            android:background="@drawable/button1_press" />
           
            <Button
            android:id="@+id/btnSetting"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Setting" 
            android:layout_marginTop="5dp"
             android:layout_gravity="center"
             android:visibility="gone"
             android:textAppearance="?android:attr/textAppearanceLarge"
             android:textColor="@android:color/white"
            android:background="@drawable/button1_press"/>
            
            
    </LinearLayout>
    </RelativeLayout>
    </ScrollView>

</RelativeLayout>