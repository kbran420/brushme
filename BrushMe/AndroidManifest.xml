<?xml version="1.0" encoding="utf-8"?>
<manifest xmlns:android="http://schemas.android.com/apk/res/android"
    package="com.technotricks.paint"
    android:versionCode="1"
    android:versionName="1.0" >

    <uses-sdk
        android:minSdkVersion="8"
        android:targetSdkVersion="18" />
    
    <uses-permission android:name="android.permission.WRITE_EXTERNAL_STORAGE" />    
    <uses-permission android:name="android.permission.INTERNET" />
      <uses-permission android:name="android.permission.SET_WALLPAPER" />

    <application
        android:allowBackup="true"
        android:largeHeap="true"
        android:icon="@drawable/ic_launcher"
        android:label="@string/app_name"
        android:theme="@style/AppTheme"
        android:name=".baseactivity.MyApplication">
        <activity
            android:name=".ui.common.SplashAnimated"
            android:label="@string/app_name"
            android:screenOrientation="portrait" 
              android:theme="@android:style/Theme.Black.NoTitleBar.Fullscreen">
            <intent-filter>
                <action android:name="android.intent.action.MAIN" />

                <category android:name="android.intent.category.LAUNCHER" />
            </intent-filter>
        </activity>
        
        <activity android:name=".ui.common.MenuActivity"  android:screenOrientation="portrait"
            android:theme="@android:style/Theme.Black.NoTitleBar"/>
        <activity android:name=".ui.common.ImageListActivity"  android:screenOrientation="portrait"
              android:theme="@android:style/Theme.Black.NoTitleBar"/>
        
          <activity android:name=".ui.common.PaintPanalActivity"  android:screenOrientation="portrait"
              />
          <activity android:name=".ui.common.FillColorActivity"  android:screenOrientation="portrait"/>
          
          <activity android:name=".ui.common.CoverflowActivity"  android:screenOrientation="portrait"
              android:theme="@android:style/Theme.Black.NoTitleBar"/>
          <activity android:name=".ui.common.ColorPick"  android:screenOrientation="portrait"
              android:theme="@android:style/Theme.Black.NoTitleBar"/>
          
          
          
          
        
    </application>

</manifest>
